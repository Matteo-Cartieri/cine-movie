<%- include('header', {title, isLoggedIn, user}); -%>

<!--se Ã¨ presente un messaggio di errore, lo visualizza-->
<% if(message) { %> 
    <div class="below-nav">
            <div class="text-center error-box">               
                <h4 class="white-text"><%= message %></h4>       
            </div> 
            <div class="space-small"></div> 
    </div>      
<% } %>

<!--form per l'inserimento delle informazioni di registrazione di un utente-->
<div class="container-fluid">
    <main class="<%= message!==null ? '' : 'below-nav' %>">   
        <form method="POST" action="/signup" class="white-text">
            <h3 class="center-item">
                Inserisci le tue credenziali
            </h3>
            <div class="row justify-content-center margin-small">
                <div class="col-md-4">
                    <label for="inputEmail4">Nome</label>
                    <input type="name" class="form-control" name="name" placeholder="Nome">
                </div>
                <div class="col-md-4">
                    <label for="inputPassword4">Cognome</label>
                    <input type="surname" class="form-control" name="surname" placeholder="Cognome">
                </div>
            </div>
            <div class="row justify-content-center margin-small">
                <div class="col-md-4">
                    <label for="inputEmail4">Email</label>
                    <input type="email" class="form-control" name="email" placeholder="Email">
                </div>
                <div class="col-md-4">
                    <label for="inputPassword4">Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Password">
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-4 text-center">
                    <div class="space-small"></div>
                    <input class="form-check-input" type="checkbox" name="checkbox" id="gridCheck">
                    <label class="form-check-label">
                        Accetta <a class="white-text" href="#">le condizioni di utilizzo</a>
                    </label>
                </div>
            </div>
            <div class="space-small"></div>
            <div class="row justify-content-center margin-small">
                <div class="col-md-4 text-center">
                    <button type="submit" class="btn btn-card white-text">Registrati</button>
                </div>
            </div>
        </form>
    </main>
</div>

<%- include('footer'); -%>