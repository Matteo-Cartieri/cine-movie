<!--card per la gestione del film da parte dell'admin-->
<div class="card card-block film-card" date="<%= film.data %>" hour="<%= film.ora %>" genre="<%= film.genere %>">
    <div class="flex-card">
        <div class="card-item">
            <a href="/film-page/<%=film.idFilm%>">
                <img height="180" src="img/<%='film_'+film.idFilm %>.jpg" data-holder-rendered="true">
            </a>
        </div>
        <div class="card-item card-item-1 white-text">
            <h5 class="card-title"><%= film.titolo %></h5>
            <h6 class="card-text">Regia: <%= film.regia %><br> Anno: <%= film.anno %><br> Cast: <%= film.cast %><br> Durata: <%= film.durata %>'<br> Genere: <%= film.genere %></h6>
        </div>
        <div class="card-item card-item-2 white-text">
            <h5 class="card-title"><%= film.data %></h5>
            <h3 class="card-title"><%= film.ora %></h3>
            <a href="/seat-booking/<%=film.idFilm%>" class="btn btn-warning">Prenota un posto</a>
        </div>
        <div class="card-item card-item-2">
            <a href="/film-page/<%=film.idFilm%>" class="btn btn-primary btn-card white-text">Leggi la scheda</a>
            <a href="/insert-review/<%=film.idFilm%>" class="btn btn-primary btn-card white-text">Scrivi una recensione</a>
        </div>
        <div class="card-item card-item-2">
            <button type="button" class="btn btn-outline-light btn-lg margin-small" data-bs-toggle="modal" data-bs-target="#deleteFilm<%=film.idFilm%>"><i class="bi bi-trash"></i></button>
        </div>
    </div>
</div>

<!--modal per la conferma della cancellazione del film-->
<div class="modal fade" id="deleteFilm<%=film.idFilm%>" tabindex="-1" aria-labelledby="deleteModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Cancella prenotazione</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Vuoi cancellare "<%=film.titolo%>"?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                <form method="POST" action="/insert-film/<%=film.idFilm%>/delete">
                    <button type="submit" class="btn btn-primary">Conferma</button>
                </form>
            </div>
        </div>
    </div>
</div>