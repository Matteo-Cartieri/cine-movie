<%- include('header', {title, isLoggedIn, user}); -%>
<!--se è presente un messaggio di errore, lo visualizza-->
<% if(message) { %> 
    <div class="below-nav">
        <div class="text-center error-box">               
            <h4 class="white-text" id="message"><%= message %></h4>       
        </div> 
        <div class="space-small"></div> 
    </div>      
<% } %>

<!--form per l'inserimento delle credenziali per il login (non serve specificare se utente o admin, ciò viene gestito lato server)-->
    <div class="container-fluid">
        <main class="<%= message!==null ? '' : 'below-nav' %>">   
            <form  method="POST" action="/sessions" class="white-text">
                <h3 class="center-item">
                    Inserisci le tue credenziali
                </h3>
                <div class="row justify-content-center margin-small">
                    <div class="col-md-3">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" name="username" placeholder="Email" required>
                    </div>
                    <div class="col-md-3">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" name="password" placeholder="Password" required autocomplete>
                    </div>
                </div>
                <div class="row justify-content-center margin-small">
                    <div class="col-md text-center">
                        <p>
                            Non hai un account? <a class="white-text" href="/signup">Registrati qui</a>
                        </p>
                    </div>
                </div>
                <div class="space-small"></div>
                <div class="row justify-content-center margin-small">
                    <div class="col-md-4 text-center">
                        <button type="submit" class="btn btn-card white-text">Accedi</button>
                    </div>
                </div>
            </form>
        </main>
    </div>
<%- include('footer'); -%>