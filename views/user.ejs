<%- include('header', {title, isLoggedIn, user}); -%>

<!--pagina per la visualizzazione di tutti i biglietti e la gestione delle recensioni di un utente-->
<div class="container-fluid">
    <div class="row justify-content-center">
        <main class="col-sm-6 below-nav">
            <h4 class="white-text">
                I miei biglietti
            </h4>
            <div class="space-small"></div>
            <% if(tickets === null || tickets.length === 0) { %>
                <h6 class="white-text">
                    Nessun biglietto acquistato
                </h6>    
            <% } %>
            <% tickets.forEach((biglietto)=> { %>
                <%- include('ticket-card', {biglietto}); -%>     
            <% }); %>
            <div class="space-small"></div>
            <h4 class="white-text">
                Le mie recensioni
            </h4>
            <div class="space-small"></div>
            <% if(reviews===null || reviews.length === 0) { %>
                <h6 class="white-text">
                    Nessuna recensione
                </h6>    
            <% } %>
            <% reviews.forEach((recensione)=> { %>
                <%- include('review-modify', {recensione}); -%>     
            <% }); %>
        </main>
    </div>
</div>   

<%- include('footer'); -%>